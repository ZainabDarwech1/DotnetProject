@model LebAssist.Presentation.ViewModels.Profile.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-person-circle"></i> My Profile
                    </h3>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row mb-4">
                        <div class="col-md-4 text-center">
                            @if (!string.IsNullOrEmpty(Model.ProfilePhotoPath))
                            {
                                <img src="@Model.ProfilePhotoPath" alt="Profile Photo" class="img-thumbnail rounded-circle" style="width: 200px; height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 200px; height: 200px; margin: 0 auto;">
                                    <i class="bi bi-person-fill" style="font-size: 100px;"></i>
                                </div>
                            }
                        </div>
                        <div class="col-md-8">
                            <h4>@Model.FirstName @Model.LastName</h4>
                            @if (Model.IsProvider)
                            {
                                <span class="badge bg-success mb-2">Provider</span>
                            }
                            <p class="text-muted">@Model.Email</p>
                            
                            <dl class="row mt-3">
                                <dt class="col-sm-4">Phone Number:</dt>
                                <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not provided")</dd>

                                <dt class="col-sm-4">Location:</dt>
                                <dd class="col-sm-8">Lat: @Model.Latitude.ToString("F4"), Lon: @Model.Longitude.ToString("F4")</dd>

                                @if (Model.IsProvider)
                                {
                                    <dt class="col-sm-4">Bio:</dt>
                                    <dd class="col-sm-8">@(Model.Bio ?? "Not provided")</dd>

                                    <dt class="col-sm-4">Experience:</dt>
                                    <dd class="col-sm-8">@(Model.YearsOfExperience?.ToString() ?? "0") years</dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <a href="@Url.Action("Edit", "Profile")" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a href="@Url.Action("ChangePassword", "Profile")" class="btn btn-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                        @if (Model.IsProvider)
                        {
                            <a href="@Url.Action("Portfolio", "Provider")" class="btn btn-info">
                                <i class="bi bi-images"></i> My Portfolio
                            </a>
                            <a href="@Url.Action("MyServices", "Provider")" class="btn btn-success">
                                <i class="bi bi-gear"></i> My Services
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
