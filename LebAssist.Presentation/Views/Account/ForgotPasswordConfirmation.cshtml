@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="auth-page">
    <!-- Header Section -->
    <div class="auth-header">
        <div class="container">
            <div class="auth-hero">
                <div class="hero-icon">
                    <i class="bi bi-envelope-check"></i>
                </div>
                <h1 class="hero-title">Check Your Email</h1>
                <p class="hero-subtitle">We've sent you a password reset link</p>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="container auth-content">
        <div class="auth-wrapper">
            <div class="auth-card">
                <div class="card-body text-center">
                    <div class="success-icon">
                        <i class="bi bi-envelope-paper"></i>
                    </div>

                    <h2 class="success-title">Email Sent Successfully</h2>

                    <p class="success-description">
                        If an account exists with that email address, we've sent a password reset link.
                        Please check your inbox and spam folder.
                    </p>

                    <div class="info-box">
                        <i class="bi bi-info-circle"></i>
                        <div>
                            <strong>Didn't receive the email?</strong>
                            <p>Check your spam folder or wait a few minutes. The link expires in 1 hour.</p>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Back to Login</span>
                        </a>
                        <a asp-action="ForgotPassword" class="btn btn-outline">
                            <i class="bi bi-arrow-clockwise"></i>
                            <span>Resend Email</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Help Cards -->
            <div class="info-cards">
                <div class="info-card">
                    <i class="bi bi-clock"></i>
                    <h4>Link Validity</h4>
                    <p>Reset link is valid for 1 hour</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-shield-check"></i>
                    <h4>Secure Reset</h4>
                    <p>Your security is our priority</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-headset"></i>
                    <h4>Need Help?</h4>
                    <p>Contact support anytime</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/authSuccess.css" asp-append-version="true" />
}
