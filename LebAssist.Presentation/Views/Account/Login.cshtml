@model LebAssist.Presentation.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="auth-page">
    <!-- Header Section -->
    <div class="auth-header">
        <div class="container">
            <div class="auth-hero">
                <div class="hero-icon">
                    <i class="bi bi-box-arrow-in-right"></i>
                </div>
                <h1 class="hero-title">Welcome Back</h1>
                <p class="hero-subtitle">Sign in to access your account</p>
            </div>
        </div>
    </div>

    <!-- Login Form Section -->
    <div class="container auth-content">
        <div class="auth-wrapper">
            <div class="auth-card">
                <div class="card-header">
                    <h2>Sign In</h2>
                    <p>Enter your credentials to continue</p>
                </div>

                <div class="card-body">
                    <form asp-action="Login" method="post" class="auth-form">
                        <div asp-validation-summary="ModelOnly" class="validation-alert"></div>
                        <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                        <!-- Email Field -->
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i>
                                <span>Email Address</span>
                            </label>
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="Enter your email"
                                   autofocus />
                            <span asp-validation-for="Email" class="validation-message"></span>
                        </div>

                        <!-- Password Field -->
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock"></i>
                                <span>Password</span>
                            </label>
                            <div class="password-wrapper">
                                <input asp-for="Password"
                                       class="form-control"
                                       type="password"
                                       id="passwordInput"
                                       placeholder="Enter your password" />
                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="validation-message"></span>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="form-options">
                            <div class="custom-checkbox">
                                <input asp-for="RememberMe"
                                       class="checkbox-input"
                                       type="checkbox"
                                       id="rememberCheck" />
                                <label for="rememberCheck" class="checkbox-label">
                                    <span class="checkbox-box">
                                        <i class="bi bi-check"></i>
                                    </span>
                                    <span class="checkbox-text">Remember me</span>
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" class="forgot-link">
                                Forgot password?
                            </a>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Sign In</span>
                        </button>

                        <!-- Divider -->
                        <div class="divider">
                            <span>or</span>
                        </div>

                        <!-- Register Link -->
                        <div class="register-section">
                            <p>Don't have an account?</p>
                            <a asp-action="Register" class="btn btn-outline">
                                <i class="bi bi-person-plus"></i>
                                <span>Create Account</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Cards -->
            <div class="info-cards">
                <div class="info-card">
                    <i class="bi bi-shield-check"></i>
                    <h4>Secure Login</h4>
                    <p>Your data is encrypted and protected</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-people"></i>
                    <h4>Trusted Community</h4>
                    <p>Join thousands of satisfied users</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-headset"></i>
                    <h4>24/7 Support</h4>
                    <p>We're here to help anytime</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    </script>
}