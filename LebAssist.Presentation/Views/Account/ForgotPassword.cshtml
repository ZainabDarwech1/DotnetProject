@model LebAssist.Presentation.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="auth-page">
    <!-- Header Section -->
    <div class="auth-header">
        <div class="container">
            <div class="auth-hero">
                <div class="hero-icon">
                    <i class="bi bi-key"></i>
                </div>
                <h1 class="hero-title">Forgot Password?</h1>
                <p class="hero-subtitle">No worries, we'll help you reset it</p>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="container auth-content">
        <div class="auth-wrapper">
            <div class="auth-card">
                <div class="card-header">
                    <h2>Reset Your Password</h2>
                    <p>Enter your email address and we'll send you a reset link</p>
                </div>

                <div class="card-body">
                    <form asp-action="ForgotPassword" method="post" class="auth-form">
                        <div asp-validation-summary="ModelOnly" class="validation-alert"></div>

                        <!-- Email Field -->
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="bi bi-envelope"></i>
                                <span>Email Address</span>
                            </label>
                            <input asp-for="Email"
                                   class="form-control"
                                   placeholder="Enter your email address"
                                   autofocus />
                            <span asp-validation-for="Email" class="validation-message"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send"></i>
                            <span>Send Reset Link</span>
                        </button>

                        <!-- Divider -->
                        <div class="divider">
                            <span>or</span>
                        </div>

                        <!-- Back to Login -->
                        <div class="register-section">
                            <p>Remember your password?</p>
                            <a asp-action="Login" class="btn btn-outline">
                                <i class="bi bi-arrow-left"></i>
                                <span>Back to Login</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Cards -->
            <div class="info-cards">
                <div class="info-card">
                    <i class="bi bi-shield-lock"></i>
                    <h4>Secure Process</h4>
                    <p>Your password is encrypted and protected</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-clock-history"></i>
                    <h4>Quick Reset</h4>
                    <p>Reset link expires in 1 hour</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-envelope-check"></i>
                    <h4>Check Spam</h4>
                    <p>Email not received? Check spam folder</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
