@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body text-center">
                <i class="bi bi-check-circle" style="font-size: 4rem; color: #28a745;"></i>
                <h4 class="mt-3">Password Reset Successful</h4>
                <p class="text-muted">Your password has been reset successfully.</p>
                <a asp-action="Login" class="btn btn-primary">Login with New Password</a>
            </div>
        </div>
    </div>
</div>