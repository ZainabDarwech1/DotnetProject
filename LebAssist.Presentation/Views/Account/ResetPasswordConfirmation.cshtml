@{
    ViewData["Title"] = "Password Reset Complete";
}

<div class="auth-page">
    <!-- Header Section -->
    <div class="auth-header">
        <div class="container">
            <div class="auth-hero">
                <div class="hero-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
                <h1 class="hero-title">Password Reset!</h1>
                <p class="hero-subtitle">Your password has been successfully updated</p>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="container auth-content">
        <div class="auth-wrapper">
            <div class="auth-card">
                <div class="card-body text-center">
                    <div class="success-icon">
                        <i class="bi bi-patch-check"></i>
                    </div>

                    <h2 class="success-title">All Set!</h2>

                    <p class="success-description">
                        Your password has been reset successfully. You can now log in with your new password.
                    </p>

                    <div class="info-box">
                        <i class="bi bi-lightbulb"></i>
                        <div>
                            <strong>Keep Your Account Secure</strong>
                            <p>Remember to use a strong, unique password and never share it with anyone.</p>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a asp-action="Login" class="btn btn-primary">
                            <i class="bi bi-box-arrow-in-right"></i>
                            <span>Login with New Password</span>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Help Cards -->
            <div class="info-cards">
                <div class="info-card">
                    <i class="bi bi-shield-check"></i>
                    <h4>Secure Login</h4>
                    <p>Your account is protected</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-key"></i>
                    <h4>New Password</h4>
                    <p>Active and ready to use</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-check-all"></i>
                    <h4>You're Ready</h4>
                    <p>Log in and continue where you left off</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/authSuccess.css" asp-append-version="true" />
}
