@model LebAssist.Presentation.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div class="auth-page">
    <!-- Header Section -->
    <div class="auth-header">
        <div class="container">
            <div class="auth-hero">
                <div class="hero-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <h1 class="hero-title">Reset Password</h1>
                <p class="hero-subtitle">Create a new secure password</p>
            </div>
        </div>
    </div>

    <!-- Form Section -->
    <div class="container auth-content">
        <div class="auth-wrapper">
            <div class="auth-card">
                <div class="card-header">
                    <h2>Choose New Password</h2>
                    <p>Enter your new password below</p>
                </div>

                <div class="card-body">
                    <form asp-action="ResetPassword" method="post" class="auth-form">
                        <div asp-validation-summary="ModelOnly" class="validation-alert"></div>

                        <input type="hidden" asp-for="Token" />
                        <input type="hidden" asp-for="Email" />

                        <!-- New Password Field -->
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="bi bi-lock"></i>
                                <span>New Password</span>
                            </label>
                            <div class="password-wrapper">
                                <input asp-for="Password"
                                       class="form-control"
                                       type="password"
                                       id="passwordInput"
                                       placeholder="Enter your new password"
                                       autofocus />
                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="validation-message"></span>
                            <small class="form-hint">Min 8 chars, uppercase, lowercase, digit, special char</small>
                        </div>

                        <!-- Confirm Password Field -->
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="bi bi-lock-fill"></i>
                                <span>Confirm New Password</span>
                            </label>
                            <div class="password-wrapper">
                                <input asp-for="ConfirmPassword"
                                       class="form-control"
                                       type="password"
                                       id="confirmPasswordInput"
                                       placeholder="Confirm your new password" />
                                <button type="button" class="password-toggle" onclick="toggleConfirmPassword()">
                                    <i class="bi bi-eye" id="toggleConfirmIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="validation-message"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i>
                            <span>Reset Password</span>
                        </button>

                        <!-- Divider -->
                        <div class="divider">
                            <span>or</span>
                        </div>

                        <!-- Back to Login -->
                        <div class="register-section">
                            <p>Remember your password?</p>
                            <a asp-action="Login" class="btn btn-outline">
                                <i class="bi bi-arrow-left"></i>
                                <span>Back to Login</span>
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Info Cards -->
            <div class="info-cards">
                <div class="info-card">
                    <i class="bi bi-shield-check"></i>
                    <h4>Strong Password</h4>
                    <p>Use a mix of characters for security</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-lock"></i>
                    <h4>Encrypted</h4>
                    <p>Your password is securely encrypted</p>
                </div>
                <div class="info-card">
                    <i class="bi bi-key"></i>
                    <h4>Unique</h4>
                    <p>Don't reuse old passwords</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
    <style>
        .form-hint {
            display: block;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-top: 6px;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }

        function toggleConfirmPassword() {
            const passwordInput = document.getElementById('confirmPasswordInput');
            const toggleIcon = document.getElementById('toggleConfirmIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('bi-eye');
                toggleIcon.classList.add('bi-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('bi-eye-slash');
                toggleIcon.classList.add('bi-eye');
            }
        }
    </script>
}
