@using Microsoft.Extensions.Options
@using LebAssist.Application.Common
@inject IOptions<GoogleMapsSettings> GoogleMapsSettings
@model LebAssist.Presentation.ViewModels.Emergency.EmergencyDetailsViewModel
@{
    ViewData["Title"] = "Emergency Details";
    var apiKey = GoogleMapsSettings.Value.ApiKey;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <div class="card">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Emergency #@Model.EmergencyRequestId</h4>
                    <span class="badge bg-light text-dark fs-6">@Model.Status</span>
                </div>
                <div class="card-body">
                    <!-- Service Info -->
                    <div class="mb-3">
                        <h6><i class="bi bi-tools"></i> Service</h6>
                        <p class="fs-5 mb-0">@Model.ServiceName</p>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <h6><i class="bi bi-card-text"></i> Description</h6>
                        <p>@Model.Details</p>
                    </div>

                    <!-- Client Info -->
                    <div class="mb-3">
                        <h6><i class="bi bi-person"></i> Client</h6>
                        <p class="mb-0">
                            <strong>@Model.ClientName</strong><br />
                            @if (!string.IsNullOrEmpty(Model.ClientPhone))
                            {
                                <a href="tel:@Model.ClientPhone"><i class="bi bi-telephone"></i> @Model.ClientPhone</a>
                            }
                        </p>
                    </div>

                    <!-- Provider Info (if assigned) -->
                    @if (!string.IsNullOrEmpty(Model.ProviderName))
                    {
                        <div class="mb-3">
                            <h6><i class="bi bi-person-badge"></i> Assigned Provider</h6>
                            <p class="text-success mb-0">
                                <strong>@Model.ProviderName</strong><br />
                                @if (!string.IsNullOrEmpty(Model.ProviderPhone))
                                {
                                    <a href="tel:@Model.ProviderPhone"><i class="bi bi-telephone"></i> @Model.ProviderPhone</a>
                                }
                            </p>
                        </div>
                    }

                    <!-- Location Map -->
                    <div class="mb-3">
                        <h6><i class="bi bi-geo-alt"></i> Location</h6>
                        <div id="map" style="height: 300px; width: 100%; border-radius: 12px; border: 1px solid #ddd;"></div>
                        <div class="mt-2">
                            <span class="badge bg-secondary">Lat: @Model.Latitude.ToString("F6")</span>
                            <span class="badge bg-secondary">Lng: @Model.Longitude.ToString("F6")</span>
                            <a href="https://www.google.com/maps/dir/?api=1&destination=@Model.Latitude,@Model.Longitude"
                               target="_blank" class="btn btn-outline-primary btn-sm ms-2">
                                <i class="bi bi-signpost-2"></i> Get Directions
                            </a>
                        </div>
                    </div>

                    <!-- Timeline -->
                    <div class="mb-3">
                        <h6><i class="bi bi-clock-history"></i> Timeline</h6>
                        <ul class="list-group">
                            <li class="list-group-item">
                                <i class="bi bi-circle-fill text-warning"></i>
                                Requested: @Model.RequestDateTime.ToString("MMM dd, yyyy HH:mm")
                            </li>
                            @if (Model.AcceptedDateTime.HasValue)
                            {
                                <li class="list-group-item">
                                    <i class="bi bi-circle-fill text-primary"></i>
                                    Accepted: @Model.AcceptedDateTime.Value.ToString("MMM dd, yyyy HH:mm")
                                </li>
                            }
                            @if (Model.CompletedDate.HasValue)
                            {
                                <li class="list-group-item">
                                    <i class="bi bi-circle-fill text-success"></i>
                                    Completed: @Model.CompletedDate.Value.ToString("MMM dd, yyyy HH:mm")
                                </li>
                            }
                        </ul>
                    </div>

                    <!-- Actions for assigned provider -->
                    @if (Model.IsAssignedProvider)
                    {
                        <div class="d-flex gap-2">
                            @if (Model.Status == "Accepted")
                            {
                                <form asp-action="Start" method="post">
                                    <input type="hidden" name="emergencyId" value="@Model.EmergencyRequestId" />
                                    <button type="submit" class="btn btn-info">
                                        <i class="bi bi-play-circle"></i> Start Work
                                    </button>
                                </form>
                            }
                            @if (Model.Status == "InProgress")
                            {
                                <form asp-action="Complete" method="post">
                                    <input type="hidden" name="emergencyId" value="@Model.EmergencyRequestId" />
                                    <button type="submit" class="btn btn-success">
                                        <i class="bi bi-check-circle"></i> Mark Complete
                                    </button>
                                </form>
                            }
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Pass values to JavaScript -->
<script>
    var mapConfig = {
        lat: @Model.Latitude.ToString(System.Globalization.CultureInfo.InvariantCulture),
        lng: @Model.Longitude.ToString(System.Globalization.CultureInfo.InvariantCulture)
    };
</script>

@section Scripts {
    <script>
        function initMap() {
            var pos = { lat: mapConfig.lat, lng: mapConfig.lng };
            var map = new google.maps.Map(document.getElementById("map"), {
                zoom: 14,
                center: pos
            });
            new google.maps.Marker({
                position: pos,
                map: map
            });
        }
    </script>
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=@apiKey&callback=initMap"></script>
}