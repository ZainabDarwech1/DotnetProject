@model IEnumerable<Domain.Entities.EmergencyRequest>
@{
    ViewData["Title"] = "My Emergency Requests";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-exclamation-triangle text-danger"></i> My Emergency Requests</h2>
        <a asp-action="Create" class="btn btn-danger">
            <i class="bi bi-plus-circle"></i> New Emergency
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You have no emergency requests.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var emergency in Model)
            {
                <div class="col-md-6 mb-3">
                    <div class="card @(emergency.Status == Domain.Enums.EmergencyStatus.Pending ? "border-warning" :
                                                                emergency.Status == Domain.Enums.EmergencyStatus.Accepted ? "border-primary" :
                                                                emergency.Status == Domain.Enums.EmergencyStatus.InProgress ? "border-info" :
                                                                emergency.Status == Domain.Enums.EmergencyStatus.Completed ? "border-success" : "")">
                <div class="card-header d-flex justify-content-between">
                    <span><strong>@emergency.Service?.ServiceName</strong></span>
                    <span class="badge @(emergency.Status == Domain.Enums.EmergencyStatus.Pending ? "bg-warning" :
                                                                           emergency.Status == Domain.Enums.EmergencyStatus.Accepted ? "bg-primary" :
                                                                           emergency.Status == Domain.Enums.EmergencyStatus.InProgress ? "bg-info" :
                                                                           emergency.Status == Domain.Enums.EmergencyStatus.Completed ? "bg-success" : "bg-secondary")">
                        @emergency.Status
                    </span>
                </div>
                <div class="card-body">
                    <p class="card-text">@emergency.Details?.Substring(0, Math.Min(emergency.Details?.Length ?? 0, 100))...</p>
                    <p class="text-muted small">
                        <i class="bi bi-clock"></i> @emergency.RequestDateTime.ToString("MMM dd, yyyy HH:mm")
                    </p>
                    @if (emergency.Provider != null)
                            {
                                <p class="text-success">
                                    <i class="bi bi-person-check"></i> Provider: @emergency.Provider.FirstName @emergency.Provider.LastName
                                </p>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-action="Details" asp-route-id="@emergency.EmergencyRequestId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-eye"></i> View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>