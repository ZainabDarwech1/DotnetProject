@model LebAssist.Presentation.ViewModels.Review.ProviderReviewsViewModel
@{
    ViewData["Title"] = $"Reviews for {Model.ProviderName}";
}

<div class="container py-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Services" asp-action="Index">Providers</a></li>
                    <li class="breadcrumb-item active">Reviews</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <!-- Left Column: Summary -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm sticky-top" style="top: 1rem;">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProviderPhotoPath))
                    {
                        <img src="@Model.ProviderPhotoPath" alt="@Model.ProviderName"
                             class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 100px; height: 100px;">
                            <i class="bi bi-person-fill text-white fs-1"></i>
                        </div>
                    }

                    <h4 class="mb-1">@Model.ProviderName</h4>

                    <!-- Average Rating -->
                    <div class="my-3">
                        <div class="display-4 fw-bold text-warning">@Model.AverageRating.ToString("0.0")</div>
                        <div class="mb-2">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Round(Model.AverageRating))
                                {
                                    <i class="bi bi-star-fill text-warning fs-5"></i>
                                }
                                else if (i - 0.5 <= Model.AverageRating)
                                {
                                    <i class="bi bi-star-half text-warning fs-5"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star text-muted fs-5"></i>
                                }
                            }
                        </div>
                        <p class="text-muted">Based on @Model.TotalReviews review@(Model.TotalReviews != 1 ? "s" : "")</p>
                    </div>

                    <!-- Rating Distribution -->
                    <div class="text-start">
                        @for (int i = 5; i >= 1; i--)
                        {
                            var count = Model.RatingDistribution.GetValueOrDefault(i, 0);
                            var percentage = Model.RatingPercentages.GetValueOrDefault(i, 0);
                            <div class="d-flex align-items-center mb-2">
                                <span class="me-2" style="width: 20px;">@i</span>
                                <i class="bi bi-star-fill text-warning me-2"></i>
                                <div class="progress flex-grow-1" style="height: 8px;">
                                    <div class="progress-bar bg-warning" style="width: @percentage%"></div>
                                </div>
                                <span class="ms-2 text-muted" style="width: 40px;">@count</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Column: Reviews List -->
        <div class="col-lg-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h5 class="mb-0">All Reviews</h5>

                <!-- Sort Dropdown -->
                <div class="dropdown">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button"
                            data-bs-toggle="dropdown">
                        Sort by: @(Model.SortBy == "highest" ? "Highest Rated" : Model.SortBy == "lowest" ? "Lowest Rated" : "Most Recent")
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a class="dropdown-item @(Model.SortBy == "newest" ? "active" : "")"
                               asp-action="ProviderReviews" asp-route-providerId="@Model.ProviderId"
                               asp-route-sortBy="newest">Most Recent</a>
                        </li>
                        <li>
                            <a class="dropdown-item @(Model.SortBy == "highest" ? "active" : "")"
                               asp-action="ProviderReviews" asp-route-providerId="@Model.ProviderId"
                               asp-route-sortBy="highest">Highest Rated</a>
                        </li>
                        <li>
                            <a class="dropdown-item @(Model.SortBy == "lowest" ? "active" : "")"
                               asp-action="ProviderReviews" asp-route-providerId="@Model.ProviderId"
                               asp-route-sortBy="lowest">Lowest Rated</a>
                        </li>
                    </ul>
                </div>
            </div>

            @if (!Model.Reviews.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-chat-square-text display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No Reviews Yet</h5>
                    <p class="text-muted">This provider hasn't received any reviews yet.</p>
                </div>
            }
            else
            {
                <div id="reviewsList">
                    @foreach (var review in Model.Reviews)
                    {
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex">
                                    @if (!review.IsAnonymous && !string.IsNullOrEmpty(review.ClientPhotoPath))
                                    {
                                        <img src="@review.ClientPhotoPath" alt="@review.ClientName"
                                             class="rounded-circle me-3"
                                             style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-3"
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-person-fill text-white"></i>
                                        </div>
                                    }
                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-0">@review.ClientName</h6>
                                                <small class="text-muted">@review.ServiceName • @review.TimeAgo</small>
                                            </div>
                                            <div>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= review.Rating)
                                                    {
                                                        <i class="bi bi-star-fill text-warning"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-star text-muted"></i>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(review.Comment))
                                        {
                                            <p class="mt-2 mb-0">@review.Comment</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Reviews pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="ProviderReviews"
                                   asp-route-providerId="@Model.ProviderId"
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-sortBy="@Model.SortBy">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="ProviderReviews"
                                       asp-route-providerId="@Model.ProviderId"
                                       asp-route-page="@i"
                                       asp-route-sortBy="@Model.SortBy">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="ProviderReviews"
                                   asp-route-providerId="@Model.ProviderId"
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   asp-route-sortBy="@Model.SortBy">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>