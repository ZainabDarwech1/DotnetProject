@model LebAssist.Presentation.ViewModels.Review.EditReviewViewModel
@{
    ViewData["Title"] = "Edit Review";
}

<div class="review-page">

    <!-- Header -->
    <div class="page-header">
        <div class="container">
            <div class="page-title-section">
                <h1 class="page-title">
                    <i class="bi bi-pencil-fill"></i>
                    Edit Your Review
                </h1>
                <p class="page-subtitle">Update your experience</p>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="container review-content">
        <div class="review-wrapper">

            <!-- Booking Info -->
            <div class="booking-info-card">
                <div class="info-header">
                    <i class="bi bi-info-circle"></i>
                    <h3>Review Information</h3>
                </div>

                <div class="info-content">
                    <div class="info-row">
                        <div class="info-col">
                            <label>Service Provider</label>
                            <div class="info-value">
                                <i class="bi bi-person-badge"></i>
                                @Model.ProviderName
                            </div>
                        </div>

                        <div class="info-col">
                            <label>Service</label>
                            <div class="info-value">
                                <i class="bi bi-tools"></i>
                                @Model.ServiceName
                            </div>
                        </div>
                    </div>

                    <div class="info-row">
                        <div class="info-col full-width">
                            <label>Original Review Date</label>
                            <div class="info-value">
                                <i class="bi bi-calendar-check"></i>
                                @Model.ReviewDate.ToString("MMMM dd, yyyy")
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Deadline -->
            <div class="guidelines-section mb-4"
                 style="border-left-color:@(Model.DaysRemaining <= 2 ? "var(--warning)" : "var(--success)");
                        background:@(Model.DaysRemaining <= 2 ? "rgba(245,158,11,.08)" : "rgba(16,185,129,.08)")">

                <div class="guidelines-header">
                    <i class="bi @(Model.DaysRemaining <= 2 ? "bi-clock" : "bi-info-circle")"></i>
                    <span>
                        @if (Model.DaysRemaining <= 2)
                        {
                            <strong>@Model.DaysRemaining day(s) remaining</strong>
                        }
                        else
                        {
                            <span>You can edit this review until</span>
                        }
                    </span>
                </div>

                <p class="mb-0 text-muted">
                    Editing will be locked after
                    <strong>@Model.EditDeadline.ToString("MMMM dd, yyyy")</strong>.
                </p>
            </div>

            <!-- Review Form -->
            <div class="review-form-card">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="ReviewId" />
                    <input type="hidden" asp-for="BookingId" />

                    <!-- Rating -->
                    <div class="form-section">
                        <div class="section-label">
                            <label class="form-label">
                                Your Rating
                                <span class="required">*</span>
                            </label>
                        </div>

                        <div class="star-rating-container">
                            <div class="star-rating-input">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    <input type="radio"
                                           id="star@(i)"
                                           name="Rating"
                                           value="@i"
                                           class="star-input"
                                           @(Model.Rating == i ? "checked" : "") />

                                    <label for="star@(i)"
                                           class="star-label @(i <= Model.Rating ? "active" : "")"
                                           data-rating="@i">
                                        <i class="bi bi-star-fill"></i>
                                    </label>
                                }
                            </div>

                            <div class="rating-feedback">
                                <div id="ratingText" class="rating-text active">
                                    @{
                                        var texts = new Dictionary<int, string>
                                        {
                                            {1,"Poor - Very disappointed"},
                                            {2,"Fair - Below expectations"},
                                            {3,"Good - Met expectations"},
                                            {4,"Very Good - Exceeded expectations"},
                                            {5,"Excellent - Outstanding service!"}
                                        };
                                    }
                                    @texts[Model.Rating]
                                </div>
                                <div class="rating-emoji">
                                    @(Model.Rating switch {
                                        1 => "😞",
                                        2 => "😕",
                                        3 => "😊",
                                        4 => "😄",
                                        _ => "🤩"
                                    })
                                </div>
                            </div>
                        </div>

                        <span asp-validation-for="Rating" class="validation-message"></span>
                    </div>

                    <!-- Comment -->
                    <div class="form-section">
                        <div class="section-label">
                            <label asp-for="Comment" class="form-label">
                                Your Review
                                <span class="optional">(Optional)</span>
                            </label>
                        </div>

                        <div class="comment-wrapper">
                            <textarea asp-for="Comment"
                                      class="form-control"
                                      rows="5"
                                      maxlength="1000"
                                      placeholder="Update your experience..."></textarea>

                            <div class="char-counter">
                                <i class="bi bi-chat-text"></i>
                                <span id="charCount">@(Model.Comment?.Length ?? 0)</span>/1000 characters
                            </div>
                        </div>

                        <span asp-validation-for="Comment" class="validation-message"></span>
                    </div>

                    <!-- Anonymous -->
                    <div class="form-section">
                        <div class="anonymous-option">
                            <div class="custom-checkbox">
                                <input asp-for="IsAnonymous"
                                       type="checkbox"
                                       class="checkbox-input"
                                       id="anonEdit" />

                                <label for="anonEdit" class="checkbox-label">
                                    <span class="checkbox-box">
                                        <i class="bi bi-check"></i>
                                    </span>
                                    <span class="checkbox-text">
                                        <strong>Post Anonymously</strong>
                                        <span class="checkbox-desc">
                                            Your name won't be shown with this review
                                        </span>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>

                    <!-- Actions -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-submit">
                            <i class="bi bi-check-lg"></i>
                            Update Review
                        </button>

                        <a asp-action="MyReviews" class="btn btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/reviewCreate.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
     <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ratingConfig = {
                1: { text: 'Poor - Very disappointed', emoji: '😞' },
                2: { text: 'Fair - Below expectations', emoji: '😕' },
                3: { text: 'Good - Met expectations', emoji: '😊' },
                4: { text: 'Very Good - Exceeded expectations', emoji: '😄' },
                5: { text: 'Excellent - Outstanding service!', emoji: '🤩' }
            };

            const stars = document.querySelectorAll('.star-label');
            const ratingText = document.getElementById('ratingText');
            const ratingEmoji = document.getElementById('ratingEmoji');

            stars.forEach(star => {
                star.addEventListener('click', function() {
                    const rating = this.dataset.rating;
                    document.getElementById('star' + rating).checked = true;

                    stars.forEach(s => s.classList.remove('active'));
                    this.classList.add('active');
                    let sibling = this.nextElementSibling;
                    while (sibling) {
                        if (sibling.classList.contains('star-label')) {
                            sibling.classList.add('active');
                        }
                        sibling = sibling.nextElementSibling;
                    }

                    updateRatingDisplay(rating);
                });

                star.addEventListener('mouseenter', function() {
                    const rating = this.dataset.rating;
                    updateRatingDisplay(rating);
                });
            });

            document.querySelector('.star-rating-input').addEventListener('mouseleave', function() {
                const checked = document.querySelector('.star-rating-input input:checked');
                if (checked) {
                    updateRatingDisplay(checked.value);
                } else {
                    ratingText.textContent = 'Click stars to rate';
                    ratingText.classList.remove('active');
                    ratingEmoji.textContent = '';
                }
            });

            function updateRatingDisplay(rating) {
                const config = ratingConfig[rating];
                ratingText.textContent = config.text;
                ratingText.classList.add('active');
                ratingEmoji.textContent = config.emoji;
            }

            // Character counter
            const commentField = document.getElementById('Comment');
            const charCount = document.getElementById('charCount');

            if (commentField) {
                commentField.addEventListener('input', function() {
                    charCount.textContent = this.value.length;

                    if (this.value.length > 900) {
                        charCount.style.color = 'var(--danger)';
                    } else {
                        charCount.style.color = 'var(--text-muted)';
                    }
                });
            }
        });
    </script>
}
