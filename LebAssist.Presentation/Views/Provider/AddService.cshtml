@model LebAssist.Presentation.ViewModels.Provider.AddProviderServiceViewModel
@{
    ViewData["Title"] = "Add Service";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Add Service</h3>
                </div>
                <div class="card-body">
                    <form asp-action="AddService" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label asp-for="ServiceId" class="form-label"></label>
                            <select asp-for="ServiceId" class="form-select">
                                <option value="">-- Select a Service --</option>
                                @foreach (var group in Model.ServiceCategories)
                                {
                                    <optgroup label="@group.CategoryName">
                                        @foreach (var service in group.Services)
                                        {
                                            <option value="@service.ServiceId">@service.ServiceName</option>
                                        }
                                    </optgroup>
                                }
                            </select>
                            <span asp-validation-for="ServiceId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PricePerHour" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="PricePerHour" class="text-danger"></span>
                            <small class="text-muted">Optional - Set your hourly rate for this service</small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Add Service
                            </button>
                            <a href="@Url.Action("MyServices")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
