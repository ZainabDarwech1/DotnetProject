@model LebAssist.Presentation.ViewModels.Provider.EditProviderServiceViewModel
@{
    ViewData["Title"] = "Edit Service";
    string[] days = { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
}

<div class="edit-service-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="custom-breadcrumb" aria-label="breadcrumb">
                <ol class="breadcrumb-list">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Home")">
                            <i class="bi bi-house-door"></i>
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Dashboard", "Provider")">
                            <i class="bi bi-speedometer2"></i>
                            Provider Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("MyServices")">
                            <i class="bi bi-gear-fill"></i>
                            My Services
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item active">
                        Edit Service
                    </li>
                </ol>
            </nav>

            <!-- Page Title -->
            <div class="page-title-section">
                <h1 class="page-title">
                    <i class="bi bi-pencil-square"></i>
                    Edit Service
                </h1>
                <p class="page-subtitle">Update your service details and availability</p>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="container form-content">
        <div class="form-wrapper">
            <form asp-action="EditService" method="post" id="editServiceForm">
                <!-- Validation Summary -->
                <div asp-validation-summary="ModelOnly" class="custom-alert alert-danger"></div>

                <!-- Hidden Fields -->
                <input type="hidden" asp-for="ServiceId" />
                <input type="hidden" asp-for="ProviderServiceId" />

                <!-- Service Information Card -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="card-icon">
                            <i class="bi bi-info-circle"></i>
                        </div>
                        <div class="card-title-section">
                            <h3 class="card-title">Service Information</h3>
                            <p class="card-subtitle">Currently editing: @Model.ServiceName</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="form-group">
                            <label class="form-label">
                                <i class="bi bi-tools"></i>
                                Service Name
                            </label>
                            <div class="service-display">
                                <div class="service-badge">
                                    <i class="bi bi-gear-fill"></i>
                                </div>
                                <span class="service-name">@Model.ServiceName</span>
                            </div>
                            <div class="form-hint">
                                <i class="bi bi-info-circle"></i>
                                <span>Service name cannot be changed after creation</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Pricing Card -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="card-icon">
                            <i class="bi bi-cash-coin"></i>
                        </div>
                        <div class="card-title-section">
                            <h3 class="card-title">Pricing</h3>
                            <p class="card-subtitle">Update your competitive hourly rate</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="form-group">
                            <label asp-for="PricePerHour" class="form-label">
                                <i class="bi bi-currency-dollar"></i>
                                Hourly Rate
                                <span class="required">*</span>
                            </label>
                            <div class="price-input-group">
                                <span class="currency-prefix">$</span>
                                <input asp-for="PricePerHour"
                                       class="form-control price-input"
                                       type="number"
                                       step="0.01"
                                       placeholder="0.00"
                                       min="0" />
                            </div>
                            <span asp-validation-for="PricePerHour" class="validation-message"></span>
                            <div class="form-hint">
                                <i class="bi bi-info-circle"></i>
                                <span>Adjust your rate based on your experience and market demand</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Working Hours Card -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="card-icon">
                            <i class="bi bi-clock-history"></i>
                        </div>
                        <div class="card-title-section">
                            <h3 class="card-title">Working Hours</h3>
                            <p class="card-subtitle">Update your availability for this service</p>
                        </div>
                    </div>
                    <div class="form-card-body">
                        <div class="schedule-info">
                            <i class="bi bi-lightbulb"></i>
                            <span>Select the days you're available and set your working hours for each day</span>
                        </div>

                        <div class="schedule-table-wrapper">
                            <table class="schedule-table">
                                <thead>
                                    <tr>
                                        <th>Day</th>
                                        <th>Available</th>
                                        <th>Start Time</th>
                                        <th>End Time</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < 7; i++)
                                    {
                                        var schedule = Model.ServiceWorkingHours
                                        .FirstOrDefault()?
                                        .DaySchedules
                                        .FirstOrDefault(d => d.DayOfWeek == i);
                                        var isChecked = schedule != null;

                                        <tr class="schedule-row @(isChecked ? "active" : "")">
                                            <td class="day-name">
                                                <i class="bi bi-calendar-day"></i>
                                                @days[i]
                                            </td>
                                            <td class="checkbox-cell">
                                                <label class="custom-checkbox">
                                                    <input type="checkbox"
                                                           class="checkbox-input day-checkbox"
                                                           name="isDay_@i"
                                                           value="on"
                                                           data-day="@i"
                                                           @(isChecked ? "checked" : "")>
                                                    <span class="checkbox-mark">
                                                        <i class="bi bi-check"></i>
                                                    </span>
                                                </label>
                                            </td>
                                            <td class="time-cell">
                                                <div class="time-input-wrapper">
                                                    <i class="bi bi-clock"></i>
                                                    <input type="time"
                                                           class="time-input"
                                                           name="startTime_@i"
                                                           value="@(schedule?.StartTime.ToString(@"hh\:mm") ?? "09:00")"
                                                           data-day="@i"
                                                           @(schedule == null ? "disabled" : "")>
                                                </div>
                                            </td>
                                            <td class="time-cell">
                                                <div class="time-input-wrapper">
                                                    <i class="bi bi-clock-fill"></i>
                                                    <input type="time"
                                                           class="time-input"
                                                           name="endTime_@i"
                                                           value="@(schedule?.EndTime.ToString(@"hh\:mm") ?? "17:00")"
                                                           data-day="@i"
                                                           @(schedule == null ? "disabled" : "")>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Quick Actions -->
                        <div class="quick-actions">
                            <button type="button" class="quick-action-btn" id="selectWeekdays">
                                <i class="bi bi-calendar-week"></i>
                                Select Weekdays
                            </button>
                            <button type="button" class="quick-action-btn" id="selectWeekend">
                                <i class="bi bi-calendar2-day"></i>
                                Select Weekend
                            </button>
                            <button type="button" class="quick-action-btn" id="selectAll">
                                <i class="bi bi-calendar-check"></i>
                                Select All Days
                            </button>
                            <button type="button" class="quick-action-btn" id="clearAll">
                                <i class="bi bi-x-circle"></i>
                                Clear All
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="submit" class="btn btn-submit">
                        <i class="bi bi-check-circle"></i>
                        Save Changes
                    </button>
                    <a href="@Url.Action("MyServices")" class="btn btn-cancel">
                        <i class="bi bi-x-circle"></i>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/editService.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Enable/disable time inputs based on checkbox
            document.querySelectorAll('.day-checkbox').forEach(checkbox => {
                checkbox.addEventListener('change', function() {
                    const day = this.dataset.day;
                    const row = this.closest('.schedule-row');
                    const startInput = row.querySelector(`input[name="startTime_${day}"]`);
                    const endInput = row.querySelector(`input[name="endTime_${day}"]`);

                    startInput.disabled = !this.checked;
                    endInput.disabled = !this.checked;

                    // Add visual feedback
                    if (this.checked) {
                        row.classList.add('active');
                    } else {
                        row.classList.remove('active');
                    }
                });
            });

            // Quick Actions
            document.getElementById('selectWeekdays').addEventListener('click', function() {
                // Monday to Friday (0-4)
                for (let i = 0; i <= 4; i++) {
                    const checkbox = document.querySelector(`.day-checkbox[data-day="${i}"]`);
                    if (!checkbox.checked) {
                        checkbox.checked = true;
                        checkbox.dispatchEvent(new Event('change'));
                    }
                }
            });

            document.getElementById('selectWeekend').addEventListener('click', function() {
                // Saturday and Sunday (5-6)
                for (let i = 5; i <= 6; i++) {
                    const checkbox = document.querySelector(`.day-checkbox[data-day="${i}"]`);
                    if (!checkbox.checked) {
                        checkbox.checked = true;
                        checkbox.dispatchEvent(new Event('change'));
                    }
                }
            });

            document.getElementById('selectAll').addEventListener('click', function() {
                document.querySelectorAll('.day-checkbox').forEach(checkbox => {
                    if (!checkbox.checked) {
                        checkbox.checked = true;
                        checkbox.dispatchEvent(new Event('change'));
                    }
                });
            });

            document.getElementById('clearAll').addEventListener('click', function() {
                document.querySelectorAll('.day-checkbox').forEach(checkbox => {
                    if (checkbox.checked) {
                        checkbox.checked = false;
                        checkbox.dispatchEvent(new Event('change'));
                    }
                });
            });

            // Form animation on load
            const formCards = document.querySelectorAll('.form-card');
            formCards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 150);
            });

            // Form validation enhancement
            const form = document.getElementById('editServiceForm');
            form.addEventListener('submit', function(e) {
                const submitBtn = form.querySelector('.btn-submit');
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Saving Changes...';
                submitBtn.disabled = true;
            });
        });
    </script>
}
