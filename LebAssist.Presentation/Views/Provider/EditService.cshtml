@model LebAssist.Presentation.ViewModels.Provider.EditProviderServiceViewModel
@{
    ViewData["Title"] = "Edit Service";
    string[] days = { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Service - @Model.ServiceName</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditService" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <label class="form-label">Service</label>
                            <input type="text" class="form-control" value="@Model.ServiceName" readonly />
                            <input type="hidden" asp-for="ServiceId" />
                            <input type="hidden" asp-for="ProviderServiceId" />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PricePerHour" class="form-label">Hourly Rate *</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="PricePerHour" class="form-control" type="number" step="0.01" />
                            </div>
                            <span asp-validation-for="PricePerHour" class="text-danger"></span>
                            <small class="text-muted">Update your hourly rate for this service</small>
                        </div>

                        <div class="card mb-3 border-info">
                            <div class="card-header bg-light">
                                <h5 class="mb-0">Working Hours</h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted mb-3">Update your availability for this service</p>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Day</th>
                                                <th>Working</th>
                                                <th>Start Time</th>
                                                <th>End Time</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < 7; i++)
                                            {
                                                var schedule = Model.ServiceWorkingHours
                                                    .FirstOrDefault()?
                                                    .DaySchedules
                                                    .FirstOrDefault(d => d.DayOfWeek == i);
                                                
                                                <tr>
                                                    <td>@days[i]</td>
                                                    <td>
                                                        <input type="checkbox" 
                                                               class="form-check-input day-checkbox" 
                                                               name="isDay_@i"
                                                               value="on"
                                                               data-day="@i"
                                                               @(schedule != null ? "checked" : "")>
                                                    </td>
                                                    <td>
                                                        <input type="time" 
                                                               class="form-control form-control-sm" 
                                                               name="startTime_@i"
                                                               value="@(schedule?.StartTime.ToString(@"hh\:mm") ?? "09:00")"
                                                               data-day="@i"
                                                               @(schedule == null ? "disabled" : "")>
                                                    </td>
                                                    <td>
                                                        <input type="time" 
                                                               class="form-control form-control-sm" 
                                                               name="endTime_@i"
                                                               value="@(schedule?.EndTime.ToString(@"hh\:mm") ?? "17:00")"
                                                               data-day="@i"
                                                               @(schedule == null ? "disabled" : "")>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Save Changes
                            </button>
                            <a href="@Url.Action("MyServices")" class="btn btn-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <script>
        // Enable/disable time inputs based on checkbox
        document.querySelectorAll('.day-checkbox').forEach(checkbox => {
            checkbox.addEventListener('change', function () {
                const day = this.dataset.day;
                const startInput = document.querySelector(`input[data-day="${day}"][name="startTime_${day}"]`);
                const endInput = document.querySelector(`input[data-day="${day}"][name="endTime_${day}"]`);
                startInput.disabled = !this.checked;
                endInput.disabled = !this.checked;
            });
        });
    </script>
}
