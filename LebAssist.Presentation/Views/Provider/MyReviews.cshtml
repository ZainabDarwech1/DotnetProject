@model LebAssist.Application.DTOs.ProviderReviewsSummaryDto
@{
    ViewData["Title"] = "My Reviews";
}

<div class="container py-4">
    <h2 class="mb-4">
        <i class="bi bi-star-fill text-warning me-2"></i>My Reviews
    </h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Stats Column -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="display-3 fw-bold text-warning">@Model.AverageRating.ToString("0.0")</div>
                    <div class="mb-2">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Round(Model.AverageRating))
                            {
                                <i class="bi bi-star-fill text-warning fs-4"></i>
                            }
                            else
                            {
                                <i class="bi bi-star text-muted fs-4"></i>
                            }
                        }
                    </div>
                    <p class="text-muted">Based on @Model.TotalReviews review@(Model.TotalReviews != 1 ? "s" : "")</p>

                    <hr>

                    <!-- Rating Distribution -->
                    <div class="text-start">
                        <h6 class="mb-3">Rating Breakdown</h6>
                        @for (int i = 5; i >= 1; i--)
                        {
                            var count = Model.RatingDistribution.GetValueOrDefault(i, 0);
                            var percentage = Model.RatingPercentages.GetValueOrDefault(i, 0);
                            <div class="d-flex align-items-center mb-2">
                                <span class="me-2" style="width: 20px;">@i</span>
                                <i class="bi bi-star-fill text-warning me-2"></i>
                                <div class="progress flex-grow-1" style="height: 10px;">
                                    <div class="progress-bar bg-warning" style="width: @percentage%"></div>
                                </div>
                                <span class="ms-2 text-muted" style="width: 40px;">@count</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews List Column -->
        <div class="col-lg-8">
            @if (!Model.Reviews.Any())
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-chat-square-text display-1 text-muted"></i>
                        <h4 class="mt-3 text-muted">No Reviews Yet</h4>
                        <p class="text-muted">Complete bookings to start receiving reviews from clients.</p>
                    </div>
                </div>
            }
            else
            {
                @foreach (var review in Model.Reviews)
                {
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <div class="d-flex">
                                    @if (!review.IsAnonymous && !string.IsNullOrEmpty(review.ClientPhotoPath))
                                    {
                                        <img src="@review.ClientPhotoPath" alt="@review.ClientName"
                                             class="rounded-circle me-3"
                                             style="width: 50px; height: 50px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center me-3"
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-person-fill text-white"></i>
                                        </div>
                                    }
                                    <div>
                                        <h6 class="mb-0">
                                            @review.ClientName
                                            @if (review.IsAnonymous)
                                            {
                                                <span class="badge bg-secondary ms-2">Anonymous</span>
                                            }
                                        </h6>
                                        <small class="text-muted">
                                            @review.ServiceName • @review.TimeAgo
                                        </small>
                                    </div>
                                </div>
                                <div>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi bi-star-fill @(i <= review.Rating ? "text-warning" : "text-muted")"></i>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(review.Comment))
                            {
                                <p class="mt-3 mb-0">@review.Comment</p>
                            }
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Reviews pagination" class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="MyReviews" asp-route-page="@(Model.CurrentPage - 1)">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="MyReviews" asp-route-page="@i">@i</a>
                                </li>
                            }

                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="MyReviews" asp-route-page="@(Model.CurrentPage + 1)">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        </ul>
                    </nav>
                }
            }
        </div>
    </div>
</div>