<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LebAssist</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body data-is-provider="@(User.IsInRole("Provider").ToString().ToLower())">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">LebAssist</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Public Services -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Services" asp-action="Index">Browse Services</a>
                        </li>

                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <!-- Profile -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Profile" asp-action="Index">My Profile</a>
                            </li>

                            <!-- Emergency Menu - Available for ALL authenticated users -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-danger" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-exclamation-triangle"></i> Emergency
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Emergency" asp-action="Index">
                                            <i class="bi bi-list"></i> My Emergencies
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-controller="Emergency" asp-action="Create">
                                            <i class="bi bi-plus-circle"></i> Create Emergency
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Provider"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Emergency" asp-action="Pending">
                                                <i class="bi bi-bell"></i> Pending Requests
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            <!-- Bookings Menu - Available for ALL authenticated users -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-calendar-check"></i> Bookings
                                </a>
                                <ul class="dropdown-menu">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Booking" asp-action="Index">
                                            <i class="bi bi-list"></i> My Bookings
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Provider"))
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="ProviderBookings" asp-action="Index">
                                                <i class="bi bi-inbox"></i> Booking Requests
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </li>

                            @if (User.IsInRole("Provider"))
                            {
                                <!-- Provider Menu -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-person-badge"></i> Provider
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Provider" asp-action="MyServices"><i class="bi bi-tools"></i> My Services</a></li>
                                        <li><a class="dropdown-item" asp-controller="Provider" asp-action="Portfolio"><i class="bi bi-images"></i> Portfolio</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Provider" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                    </ul>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <!-- Admin Menu -->
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" role="button" data-bs-toggle="dropdown">
                                        <i class="bi bi-shield-check"></i> Admin
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index"><i class="bi bi-folder"></i> Categories</a></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="Service" asp-action="Index"><i class="bi bi-gear"></i> Services</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-area="Admin" asp-controller="ProviderApplication" asp-action="Index"><i class="bi bi-person-check"></i> Provider Applications</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                                    </ul>
                                </li>
                            }
                        }
                    </ul>

                    <!-- Right Side: Notifications + Login -->
                    <ul class="navbar-nav">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <!-- Notification Bell -->
                            <li class="nav-item dropdown">
                                <a class="nav-link position-relative" href="#" id="notificationDropdown"
                                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-bell fs-5"></i>
                                    <span id="notification-badge"
                                          class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                          style="display: none; font-size: 0.6rem;">
                                        0
                                    </span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow" aria-labelledby="notificationDropdown"
                                    style="width: 320px; max-height: 400px; overflow-y: auto;">
                                    <li><h6 class="dropdown-header">Notifications</h6></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li id="notification-list">
                                        <span class="dropdown-item text-muted text-center">
                                            <small>No new notifications</small>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-center text-primary" asp-controller="Notifications" asp-action="Index">
                                            <small>View All Notifications</small>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - LebAssist - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Location Utilities -->
    <script src="~/js/location-utils.js"></script>

    <!-- SignalR Library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>

    <!-- SignalR Client -->
    <script src="~/js/signalr-client.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>