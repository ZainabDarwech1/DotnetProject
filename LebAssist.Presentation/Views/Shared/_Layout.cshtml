<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/plugins/sweetalert2/sweetalert2.min.css">
    @RenderSection("Styles", required: false)
</head>
<body data-is-provider="@(User.IsInRole("Provider").ToString().ToLower())">

    <!-- Mobile Toggle Button -->
    <button class="mobile-toggle" onclick="toggleMobileSidebar()">
        <i class="bi bi-list"></i>
    </button>

    <!-- Sidebar Overlay for Mobile -->
    <div class="sidebar-overlay" onclick="toggleMobileSidebar()"></div>

    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <a href="/" class="sidebar-brand">
                <i class="bi bi-grid-3x3-gap-fill brand-icon"></i>
                <span class="brand-text">LebAssist</span>
            </a>
            <button class="sidebar-toggle" onclick="toggleSidebar()" title="Toggle Sidebar">
                <i class="bi bi-chevron-left"></i>
            </button>
        </div>

        <nav class="sidebar-nav">
            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index" title="Home">
                        <i class="bi bi-house-door-fill"></i>
                        <span class="nav-text">Home</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Services" asp-action="Index" title="Browse Services">
                        <i class="bi bi-grid-fill"></i>
                        <span class="nav-text">Browse Services</span>
                    </a>
                </li>

                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <li class="nav-divider">
                        <span class="divider-text">Personal</span>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Profile" asp-action="Index" title="My Profile">
                            <i class="bi bi-person-fill"></i>
                            <span class="nav-text">My Profile</span>
                        </a>
                    </li>

                    <!-- Emergency Dropdown -->
                    <li class="nav-item nav-dropdown">
                        <a class="nav-link nav-dropdown-toggle emergency" onclick="toggleDropdown(event, this)" title="Emergency">
                            <div class="nav-link-content">
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <span class="nav-text">Emergency</span>
                            </div>
                            <i class="bi bi-chevron-down dropdown-arrow"></i>
                        </a>
                        <ul class="nav-dropdown-menu">
                            <li>
                                <a class="nav-link sub-link" asp-controller="Emergency" asp-action="Index" title="My Emergencies">
                                    <i class="bi bi-list-ul"></i>
                                    <span class="nav-text">My Emergencies</span>
                                </a>
                            </li>
                            <li>
                                <a class="nav-link sub-link" asp-controller="Emergency" asp-action="Create" title="Create Emergency">
                                    <i class="bi bi-plus-circle-fill"></i>
                                    <span class="nav-text">Create Emergency</span>
                                </a>
                            </li>
                            @if (User.IsInRole("Provider"))
                            {
                                <li>
                                    <a class="nav-link sub-link" asp-controller="Emergency" asp-action="Pending" title="Pending Requests">
                                        <i class="bi bi-bell-fill"></i>
                                        <span class="nav-text">Pending Requests</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    <!-- Bookings Dropdown -->
                    <li class="nav-item nav-dropdown">
                        <a class="nav-link nav-dropdown-toggle" onclick="toggleDropdown(event, this)" title="Bookings">
                            <div class="nav-link-content">
                                <i class="bi bi-calendar-check-fill"></i>
                                <span class="nav-text">Bookings</span>
                                <span id="notification-badge" class="notification-badge" style="display: none;">0</span>
                            </div>
                            <i class="bi bi-chevron-down dropdown-arrow"></i>
                        </a>
                        <ul class="nav-dropdown-menu">
                            <li>
                                <a class="nav-link sub-link" asp-controller="Booking" asp-action="MyBookings" title="My Bookings">
                                    <i class="bi bi-list-ul"></i>
                                    <span class="nav-text">My Bookings</span>
                                </a>
                            </li>
                            @if (User.IsInRole("Provider"))
                            {
                                <li>
                                    <a class="nav-link sub-link" asp-controller="ProviderBookings" asp-action="Index" title="Booking Requests">
                                        <i class="bi bi-inbox-fill"></i>
                                        <span class="nav-text">Booking Requests</span>
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    @if (User.IsInRole("Provider"))
                    {
                        <li class="nav-divider">
                            <span class="divider-text">Provider</span>
                        </li>

                        <li class="nav-item nav-dropdown">
                            <a class="nav-link nav-dropdown-toggle" onclick="toggleDropdown(event, this)" title="Provider Tools">
                                <div class="nav-link-content">
                                    <i class="bi bi-person-badge-fill"></i>
                                    <span class="nav-text">Provider Tools</span>
                                </div>
                                <i class="bi bi-chevron-down dropdown-arrow"></i>
                            </a>
                            <ul class="nav-dropdown-menu">
                                <li>
                                    <a class="nav-link sub-link" asp-controller="Provider" asp-action="MyServices" title="My Services">
                                        <i class="bi bi-tools"></i>
                                        <span class="nav-text">My Services</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link sub-link" asp-controller="Provider" asp-action="Portfolio" title="Portfolio">
                                        <i class="bi bi-images"></i>
                                        <span class="nav-text">Portfolio</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link sub-link" asp-controller="Provider" asp-action="Dashboard" title="Dashboard">
                                        <i class="bi bi-speedometer2"></i>
                                        <span class="nav-text">Dashboard</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-divider">
                            <span class="divider-text">Administration</span>
                        </li>

                        <li class="nav-item nav-dropdown">
                            <a class="nav-link nav-dropdown-toggle" onclick="toggleDropdown(event, this)" title="Admin Panel">
                                <div class="nav-link-content">
                                    <i class="bi bi-shield-fill-check"></i>
                                    <span class="nav-text">Admin Panel</span>
                                </div>
                                <i class="bi bi-chevron-down dropdown-arrow"></i>
                            </a>
                            <ul class="nav-dropdown-menu">
                                <li>
                                    <a class="nav-link sub-link" asp-area="Admin" asp-controller="Category" asp-action="Index" title="Categories">
                                        <i class="bi bi-folder-fill"></i>
                                        <span class="nav-text">Categories</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link sub-link" asp-area="Admin" asp-controller="Service" asp-action="Index" title="Services">
                                        <i class="bi bi-gear-fill"></i>
                                        <span class="nav-text">Services</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link sub-link" asp-area="Admin" asp-controller="ProviderApproval" asp-action="Pending" title="Provider Applications">
                                        <i class="bi bi-person-check-fill"></i>
                                        <span class="nav-text">Applications</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="nav-link sub-link" asp-controller="Admin" asp-action="Dashboard" title="Dashboard">
                                        <i class="bi bi-speedometer2"></i>
                                        <span class="nav-text">Dashboard</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }

                    <li class="nav-divider"></li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Notifications" asp-action="Index" title="Notifications">
                            <i class="bi bi-bell-fill"></i>
                            <span class="nav-text">Notifications</span>
                        </a>
                    </li>
                }
            </ul>
        </nav>

        <div class="sidebar-footer">
            <partial name="_LoginPartial" />
        </div>
    </aside>

    <!-- Main Content -->
    <div class="main-content" id="mainContent">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/location-utils.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script src="~/js/signalr-client.js"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    <script src="~/plugins/sweetalert2/sweetalert2.all.js"></script>
    <script>
        @if (TempData["Success"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'success',
                        title: '@TempData["Success"]',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000
                    });
                </text>
        }

        @if (TempData["Error"] != null)
        {
                <text>
                    Swal.fire({
                        icon: 'error',
                        title: '@TempData["Error"]',
                        toast: true,
                        position: 'top-end',
                        showConfirmButton: false,
                        timer: 3000
                    });
                </text>
        }
         @if (TempData["SuccessMessage"] != null)
        {
                    <text>
                        Swal.fire({
                            icon: 'success',
                            title: '@TempData["SuccessMessage"]',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000
                        });
                    </text>
        }

        @if (TempData["ErrorMessage"] != null)
        {
                    <text>
                        Swal.fire({
                            icon: 'error',
                            title: '@TempData["ErrorMessage"]',
                            toast: true,
                            position: 'top-end',
                            showConfirmButton: false,
                            timer: 3000
                        });
                    </text>
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>