@model LebAssist.Application.DTOs.ProviderReviewsSummaryDto

<div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">
            <i class="bi bi-star-fill text-warning me-2"></i>Reviews
        </h5>
        @if (Model.TotalReviews > 0)
        {
            <a asp-controller="Review" asp-action="ProviderReviews" asp-route-providerId="@Model.ProviderId"
               class="btn btn-sm btn-outline-primary">
                View All (@Model.TotalReviews)
            </a>
        }
    </div>
    <div class="card-body">
        @if (Model.TotalReviews == 0)
        {
            <p class="text-muted text-center mb-0">No reviews yet</p>
        }
        else
        {
            <!-- Rating Summary -->
            <div class="text-center mb-4">
                <div class="display-5 fw-bold text-warning">@Model.AverageRating.ToString("0.0")</div>
                <div>
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Round(Model.AverageRating))
                        {
                            <i class="bi bi-star-fill text-warning"></i>
                        }
                        else
                        {
                            <i class="bi bi-star text-muted"></i>
                        }
                    }
                </div>
                <small class="text-muted">@Model.TotalReviews review@(Model.TotalReviews != 1 ? "s" : "")</small>
            </div>

            <!-- Recent Reviews -->
            @foreach (var review in Model.Reviews.Take(3))
            {
                <div class="border-bottom pb-3 mb-3">
                    <div class="d-flex justify-content-between">
                        <strong>@review.ClientName</strong>
                        <div>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi bi-star-fill @(i <= review.Rating ? "text-warning" : "text-muted")"
                                   style="font-size: 0.8rem;"></i>
                            }
                        </div>
                    </div>
                    <small class="text-muted">@review.TimeAgo</small>
                    @if (!string.IsNullOrEmpty(review.Comment))
                    {
                        <p class="mb-0 mt-2">@review.Comment</p>
                    }
                </div>
            }
        }
    </div>
</div>