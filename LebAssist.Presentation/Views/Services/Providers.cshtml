@model LebAssist.Presentation.ViewModels.Services.ServiceProvidersViewModel
@{
    ViewData["Title"] = Model.Service.ServiceName + " - Providers";
}

<div class="container mt-4">
    <h2>@Model.Service.ServiceName - Providers</h2>
    <div class="row mt-3">
        @foreach (var p in Model.Providers)
        {
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-body d-flex align-items-center">
                        <img src="@p.ProviderPhotoPath" alt="@p.ProviderName" style="width:64px;height:64px;object-fit:cover;border-radius:6px;margin-right:12px;" />
                        <div>
                            <h5>@p.ProviderName</h5>
                            <p class="mb-1">Price: @p.PricePerHour.ToString("C")</p>
                            <a class="btn btn-sm btn-primary" href="@Url.Action("Create", "Booking", new { providerId = p.ProviderId, serviceId = Model.Service.ServiceId })">Book</a>
                            <a class="btn btn-sm btn-secondary" href="@Url.Action("Profile", "Provider", new { id = p.ProviderId })">View Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
