@model LebAssist.Application.DTOs.CategoryWithServicesDto
@{
    ViewData["Title"] = Model.CategoryName;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Services")">Services</a></li>
            <li class="breadcrumb-item active">@Model.CategoryName</li>
        </ol>
    </nav>

    <div class="mb-4">
        <h1 class="display-5">@Model.CategoryName</h1>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="lead text-muted">@Model.Description</p>
        }
    </div>

    @if (Model.Services != null && Model.Services.Any())
    {
        <div class="row g-4">
            @foreach (var service in Model.Services.Where(s => s.IsActive))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(service.ServiceIconPath))
                            {
                                <img src="@service.ServiceIconPath" alt="@service.ServiceName" class="mb-3" style="width: 60px; height: 60px; object-fit: contain;">
                            }
                            else
                            {
                                <i class="bi bi-wrench text-primary mb-3" style="font-size: 40px;"></i>
                            }
                            <h5 class="card-title">@service.ServiceName</h5>
                            <p class="card-text text-muted">@service.ServiceDescription</p>
                            <a href="@Url.Action("Details", "Services", new { id = service.ServiceId })" class="btn btn-outline-primary btn-sm">
                                View Details <i class="bi bi-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No active services in this category yet.
        </div>
    }

    <div class="mt-4">
        <a href="@Url.Action("Index", "Services")" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Categories
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
