@model LebAssist.Application.DTOs.ServiceDto
@{
    ViewData["Title"] = Model.ServiceName;
}

<div class="service-details-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="custom-breadcrumb" aria-label="breadcrumb">
                <ol class="breadcrumb-list">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Services")">
                            <i class="bi bi-house-door"></i>
                            Services
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Category", "Services", new { id = Model.CategoryId })">
                            @Model.CategoryName
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item active">
                        @Model.ServiceName
                    </li>
                </ol>
            </nav>

            <!-- Page Title -->
            <div class="page-title-section">
                <h1 class="page-title">Service Details</h1>
            </div>
        </div>
    </div>

    <!-- Service Content -->
    <div class="container service-content-section">
        <div class="service-detail-card">
            <!-- Service Icon/Image -->
            <div class="service-hero">
                <div class="service-icon-large">
                    @if (!string.IsNullOrEmpty(Model.ServiceIconPath))
                    {
                        <img src="@Model.ServiceIconPath" alt="@Model.ServiceName" class="service-hero-img">
                    }
                    else
                    {
                        <div class="service-hero-icon">
                            <i class="bi bi-wrench-adjustable"></i>
                        </div>
                    }
                </div>
            </div>

            <!-- Service Info -->
            <div class="service-info">
                <h1 class="service-name">@Model.ServiceName</h1>

                <!-- Badges -->
                <div class="service-badges">
                    <span class="badge badge-category">
                        <i class="bi bi-folder"></i>
                        @Model.CategoryName
                    </span>
                    @if (Model.IsActive)
                    {
                        <span class="badge badge-status">
                            <i class="bi bi-check-circle-fill"></i>
                            Available
                        </span>
                    }
                    else
                    {
                        <span class="badge badge-inactive">
                            <i class="bi bi-x-circle-fill"></i>
                            Unavailable
                        </span>
                    }
                </div>

                <!-- Description -->
                @if (!string.IsNullOrEmpty(Model.ServiceDescription))
                {
                    <div class="service-description-section">
                        <h3 class="section-title">
                            <i class="bi bi-info-circle"></i>
                            About This Service
                        </h3>
                        <p class="service-description">@Model.ServiceDescription</p>
                    </div>
                }

                <!-- Auth Notice -->
                @if (!User.Identity!.IsAuthenticated)
                {
                    <div class="auth-notice">
                        <div class="notice-icon">
                            <i class="bi bi-lock-fill"></i>
                        </div>
                        <div class="notice-content">
                            <h4>Account Required</h4>
                            <p>To book this service and connect with providers, please create an account or sign in.</p>
                            <div class="notice-actions">
                                <a asp-controller="Account" asp-action="Register" class="notice-btn primary">
                                    <i class="bi bi-person-plus"></i>
                                    Create Account
                                </a>
                                <a asp-controller="Account" asp-action="Login" class="notice-btn secondary">
                                    <i class="bi bi-box-arrow-in-right"></i>
                                    Sign In
                                </a>
                            </div>
                        </div>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="action-buttons">
                    <a href="@Url.Action("Providers", "Services", new { serviceId = Model.ServiceId })" class="btn btn-primary">
                        <i class="bi bi-people-fill"></i>
                        View Providers
                    </a>
                    <a href="@Url.Action("Category", "Services", new { id = Model.CategoryId })" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i>
                        Back to @Model.CategoryName
                    </a>
                    <a href="@Url.Action("Index", "Services")" class="btn btn-outline">
                        <i class="bi bi-grid"></i>
                        Browse All Services
                    </a>
                </div>
            </div>
        </div>

        <!-- Additional Info Cards -->
        <div class="info-cards">
            <div class="info-card">
                <div class="info-icon">
                    <i class="bi bi-shield-check"></i>
                </div>
                <h4>Verified Providers</h4>
                <p>All service providers are verified and reviewed by our community</p>
            </div>
            <div class="info-card">
                <div class="info-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
                <h4>24/7 Support</h4>
                <p>Get help anytime with our round-the-clock customer support</p>
            </div>
            <div class="info-card">
                <div class="info-icon">
                    <i class="bi bi-star-fill"></i>
                </div>
                <h4>Quality Service</h4>
                <p>Top-rated professionals committed to excellence</p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/serviceDetails.css" />
}