@model LebAssist.Application.DTOs.ServiceDto
@{
    ViewData["Title"] = Model.ServiceName;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Services")">Services</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Category", "Services", new { id = Model.CategoryId })">@Model.CategoryName</a></li>
            <li class="breadcrumb-item active">@Model.ServiceName</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-body">
                    <div class="text-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ServiceIconPath))
                        {
                            <img src="@Model.ServiceIconPath" alt="@Model.ServiceName" style="width: 100px; height: 100px; object-fit: contain;">
                        }
                        else
                        {
                            <i class="bi bi-wrench text-primary" style="font-size: 80px;"></i>
                        }
                    </div>

                    <h1 class="text-center mb-3">@Model.ServiceName</h1>
                    
                    <div class="text-center mb-4">
                        <span class="badge bg-primary">@Model.CategoryName</span>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Available</span>
                        }
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ServiceDescription))
                    {
                        <div class="mb-4">
                            <h5>Description</h5>
                            <p class="text-muted">@Model.ServiceDescription</p>
                        </div>
                    }

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 
                        To book this service, please <a href="@Url.Action("Register", "Account")">register</a> or <a href="@Url.Action("Login", "Account")">login</a> to your account.
                    </div>

                    <div class="d-flex gap-2 justify-content-center">
                        <a href="@Url.Action("Category", "Services", new { id = Model.CategoryId })" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to @Model.CategoryName
                        </a>
                        <a href="@Url.Action("Index", "Services")" class="btn btn-outline-secondary">
                            Browse All Services
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
