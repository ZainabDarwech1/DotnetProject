@model LebAssist.Presentation.Areas.Admin.ViewModels.ApplicationDetailsViewModel
@{
    ViewData["Title"] = "Application Details";
    string[] days = { "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday" };
}

<div class="admin-application-details-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="custom-breadcrumb" aria-label="breadcrumb">
                <ol class="breadcrumb-list">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                            <i class="bi bi-speedometer2"></i>
                            Admin Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "ProviderApproval", new { area = "Admin" })">
                            <i class="bi bi-hourglass-split"></i>
                            Pending Applications
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item active">
                        Application Details
                    </li>
                </ol>
            </nav>

            <!-- Page Title -->
            <div class="page-title-section">
                <h1 class="page-title">
                    <i class="bi bi-file-earmark-person"></i>
                    Provider Application Review
                </h1>
                <p class="page-subtitle">@Model.Client?.FirstName @Model.Client?.LastName</p>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="container details-content">
        <div class="details-layout">
            <!-- Left Column - Profile Card -->
            <div class="left-column">
                <div class="profile-card">
                    <div class="profile-header">
                        <i class="bi bi-person-badge"></i>
                        <h3>Applicant Profile</h3>
                    </div>
                    <div class="profile-body">
                        <div class="profile-photo-container">
                            @if (!string.IsNullOrEmpty(Model.Client?.ProfilePhotoPath))
                            {
                                <img src="@Model.Client.ProfilePhotoPath" alt="Profile" class="profile-photo">
                            }
                            else
                            {
                                <div class="profile-photo-placeholder">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                            }
                        </div>

                        <h4 class="applicant-name">@Model.Client?.FirstName @Model.Client?.LastName</h4>

                        <div class="profile-details">
                            <div class="detail-item">
                                <i class="bi bi-telephone"></i>
                                <div>
                                    <span class="detail-label">Phone</span>
                                    <span class="detail-value">@Model.Client?.PhoneNumber</span>
                                </div>
                            </div>

                            <div class="detail-item">
                                <i class="bi bi-award"></i>
                                <div>
                                    <span class="detail-label">Experience</span>
                                    <span class="detail-value">@Model.Client?.YearsOfExperience years</span>
                                </div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Client?.Bio))
                        {
                            <div class="bio-section">
                                <h5 class="bio-title">
                                    <i class="bi bi-chat-text"></i>
                                    About
                                </h5>
                                <p class="bio-text">@Model.Client.Bio</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column - Details Cards -->
            <div class="right-column">
                <!-- Services Card -->
                <div class="details-card">
                    <div class="card-header">
                        <i class="bi bi-tools"></i>
                        <h3>Requested Services</h3>
                        <span class="count-badge">@Model.Services.Count()</span>
                    </div>
                    <div class="card-body">
                        <div class="services-list">
                            @foreach (var s in Model.Services)
                            {
                                <div class="service-item">
                                    <div class="service-icon">
                                        <i class="bi bi-check-circle"></i>
                                    </div>
                                    <div class="service-info">
                                        <span class="service-name">@s.ServiceName</span>
                                        <span class="service-category">@s.CategoryName</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Working Hours Card -->
                <div class="details-card">
                    <div class="card-header">
                        <i class="bi bi-clock-history"></i>
                        <h3>Working Hours Schedule</h3>
                    </div>
                    <div class="card-body">
                        @foreach (var w in Model.WorkingHours)
                        {
                            var serviceName = Model.Services.FirstOrDefault(s => s.ServiceId == w.ServiceId)?.ServiceName;
                            <div class="schedule-section">
                                <h4 class="schedule-service-name">
                                    <i class="bi bi-gear"></i>
                                    @serviceName
                                </h4>
                                <div class="schedule-days">
                                    @foreach (var d in w.DaySchedules.OrderBy(x => x.DayOfWeek))
                                    {
                                        <div class="day-schedule">
                                            <span class="day-name">@days[d.DayOfWeek]</span>
                                            <span class="day-times">
                                                <i class="bi bi-clock"></i>
                                                @d.StartTime.ToString(@"hh\:mm") - @d.EndTime.ToString(@"hh\:mm")
                                            </span>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Decision Actions Card -->
                <div class="actions-card">
                    <div class="actions-header">
                        <i class="bi bi-hand-thumbs-up"></i>
                        <h3>Review Decision</h3>
                    </div>
                    <div class="actions-body">
                        <p class="actions-description">
                            Review the applicant's information carefully before making a decision.
                            Approved providers will be able to start accepting bookings immediately.
                        </p>
                        <div class="action-buttons">
                            <form action="/Admin/ProviderApproval/Approve" method="post" class="action-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="clientId" value="@Model.Client!.ClientId" />
                                <button type="submit" class="btn btn-approve">
                                    <i class="bi bi-check-circle"></i>
                                    Approve Application
                                </button>
                            </form>
                            <button class="btn btn-reject" data-bs-toggle="modal" data-bs-target="#rejectModal">
                                <i class="bi bi-x-circle"></i>
                                Reject Application
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle"></i>
                    Reject Application
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/Admin/ProviderApproval/Reject" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <input type="hidden" name="clientId" value="@Model.Client!.ClientId" />

                    <div class="alert alert-warning">
                        <i class="bi bi-info-circle"></i>
                        <span>This action will notify the applicant that their application was not approved.</span>
                    </div>

                    <div class="form-group">
                        <label for="reason" class="form-label">
                            <i class="bi bi-chat-text"></i>
                            Reason for Rejection
                            <span class="required">*</span>
                        </label>
                        <textarea name="reason"
                                  id="reason"
                                  class="form-control"
                                  rows="5"
                                  placeholder="Provide a detailed reason for rejecting this application..."
                                  required></textarea>
                        <small class="form-hint">This message will be sent to the applicant</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-cancel" data-bs-dismiss="modal">
                        <i class="bi bi-x"></i>
                        Cancel
                    </button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-exclamation-circle"></i>
                        Reject Application
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/applicationDetails.css" />
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animate cards on load
            const cards = document.querySelectorAll('.profile-card, .details-card, .actions-card');
            cards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    card.style.transition = 'all 0.5s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });

            // Confirm approve action
            document.querySelectorAll('.btn-approve').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    if (!confirm('Are you sure you want to approve this application? The applicant will be notified and granted provider access.')) {
                        e.preventDefault();
                    }
                });
            });
        });
    </script>
}
