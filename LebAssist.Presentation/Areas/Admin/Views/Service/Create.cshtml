@model LebAssist.Presentation.Areas.Admin.ViewModels.CreateServiceViewModel
@{
    ViewData["Title"] = "Create Service";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="admin-create-service-page">
    <!-- Header Section -->
    <div class="page-header">
        <div class="container">
            <!-- Breadcrumb -->
            <nav class="custom-breadcrumb" aria-label="breadcrumb">
                <ol class="breadcrumb-list">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                            <i class="bi bi-speedometer2"></i>
                            Admin Dashboard
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Service", new { area = "Admin" })">
                            <i class="bi bi-tools"></i>
                            Services Management
                        </a>
                    </li>
                    <li class="breadcrumb-separator">
                        <i class="bi bi-chevron-right"></i>
                    </li>
                    <li class="breadcrumb-item active">
                        Create Service
                    </li>
                </ol>
            </nav>

            <!-- Page Title -->
            <div class="page-title-section">
                <h1 class="page-title">
                    <i class="bi bi-plus-circle"></i>
                    Create New Service
                </h1>
                <p class="page-subtitle">Add a new service to the system</p>
            </div>
        </div>
    </div>

    <!-- Content Section -->
    <div class="container form-content">
        <div class="form-wrapper">
            <div class="form-card">
                <div class="form-card-header">
                    <div class="card-icon">
                        <i class="bi bi-gear-fill"></i>
                    </div>
                    <div class="card-title-section">
                        <h3 class="card-title">Service Information</h3>
                        <p class="card-subtitle">Fill in the details for the new service</p>
                    </div>
                </div>

                <div class="form-card-body">
                    <form asp-action="Create"
                          asp-controller="Service"
                          asp-area="Admin"
                          method="post"
                          enctype="multipart/form-data"
                          class="service-form">
                        @Html.AntiForgeryToken()

                        <!-- Category Selection -->
                        <div class="form-group">
                            <label asp-for="CategoryId" class="form-label">
                                <i class="bi bi-bookmark"></i>
                                <span>Category</span>
                                <span class="required">*</span>
                            </label>
                            <select asp-for="CategoryId" class="form-control">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.CategoryId">@category.CategoryName</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="validation-message"></span>
                        </div>

                        <!-- Service Name -->
                        <div class="form-group">
                            <label asp-for="ServiceName" class="form-label">
                                <i class="bi bi-tag"></i>
                                <span>Service Name</span>
                                <span class="required">*</span>
                            </label>
                            <input asp-for="ServiceName"
                                   class="form-control"
                                   placeholder="e.g., Plumbing, Electrical Repair, etc." />
                            <span asp-validation-for="ServiceName" class="validation-message"></span>
                        </div>

                        <!-- Service Description -->
                        <div class="form-group">
                            <label asp-for="ServiceDescription" class="form-label">
                                <i class="bi bi-chat-text"></i>
                                <span>Description</span>
                                <span class="required">*</span>
                            </label>
                            <textarea asp-for="ServiceDescription"
                                      class="form-control description-textarea"
                                      rows="5"
                                      placeholder="Provide a detailed description of the service..."
                                      id="descriptionInput"></textarea>
                            <span asp-validation-for="ServiceDescription" class="validation-message"></span>
                            <div class="char-counter">
                                <i class="bi bi-info-circle"></i>
                                <span id="charCount">0</span> characters
                            </div>
                        </div>

                        <!-- Service Icon -->
                        <div class="form-group">
                            <label asp-for="ServiceIcon" class="form-label">
                                <i class="bi bi-image"></i>
                                <span>Service Icon</span>
                                <span class="optional">(Optional)</span>
                            </label>

                            <!-- Image Preview -->
                            <div id="iconPreview" class="icon-preview-container" style="display: none;">
                                <img id="previewImg" src="" alt="Preview" class="icon-preview">
                                <button type="button" class="btn-remove-preview" onclick="removeIcon()">
                                    <i class="bi bi-x-circle"></i>
                                </button>
                            </div>

                            <div class="file-upload-wrapper">
                                <input asp-for="ServiceIcon"
                                       class="file-input"
                                       type="file"
                                       accept="image/*"
                                       id="iconInput"
                                       onchange="previewIcon(this)" />
                                <label for="iconInput" class="file-upload-label" id="fileLabel">
                                    <i class="bi bi-cloud-upload"></i>
                                    <span class="file-text">Choose an icon or drag it here</span>
                                    <span class="file-hint">JPG, PNG, WEBP • Max 5MB</span>
                                </label>
                            </div>
                            <span asp-validation-for="ServiceIcon" class="validation-message"></span>
                        </div>

                        <!-- Form Actions -->
                        <div class="form-actions">
                            <button type="submit" class="btn btn-submit">
                                <i class="bi bi-check-circle"></i>
                                Create Service
                            </button>
                            <a asp-area="Admin" asp-controller="Service" asp-action="Index"
                               class="btn btn-cancel">
                                <i class="bi bi-x-circle"></i>
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/serviceAdminCreate.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Character counter for description
        const descInput = document.getElementById('descriptionInput');
        const charCount = document.getElementById('charCount');

        if (descInput && charCount) {
            charCount.textContent = descInput.value.length;
            descInput.addEventListener('input', function() {
                charCount.textContent = this.value.length;
            });
        }

        // Icon preview
        function previewIcon(input) {
            const preview = document.getElementById('iconPreview');
            const img = document.getElementById('previewImg');
            const label = document.getElementById('fileLabel');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    img.src = e.target.result;
                    preview.style.display = 'block';
                    label.style.display = 'none';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeIcon() {
            document.getElementById('iconInput').value = '';
            document.getElementById('iconPreview').style.display = 'none';
            document.getElementById('fileLabel').style.display = 'flex';
        }

        // Animate form on load
        document.addEventListener('DOMContentLoaded', function() {
            const formCard = document.querySelector('.form-card');
            if (formCard) {
                formCard.style.opacity = '0';
                formCard.style.transform = 'translateY(20px)';
                setTimeout(() => {
                    formCard.style.transition = 'all 0.6s ease';
                    formCard.style.opacity = '1';
                    formCard.style.transform = 'translateY(0)';
                }, 100);
            }
        });
    </script>
}
