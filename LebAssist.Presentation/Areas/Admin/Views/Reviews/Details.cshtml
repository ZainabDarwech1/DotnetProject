@model LebAssist.Presentation.ViewModels.Review.AdminReviewDetailViewModel
@{
    ViewData["Title"] = "Review Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Reviews</a></li>
            <li class="breadcrumb-item active">Review #@Model.Review.ReviewId</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Review Details</h5>
                    <div>
                        @if (Model.Review.IsVisible)
                        {
                            <span class="badge bg-success">Visible</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Hidden</span>
                        }
                        @if (Model.Review.AdminModerated)
                        {
                            <span class="badge bg-info">Moderated</span>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="text-muted">Client</label>
                            <p class="fw-semibold mb-0">
                                @Model.Review.ClientName
                                @if (Model.Review.IsAnonymous)
                                {
                                    <span class="badge bg-secondary">Posted Anonymously</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">Provider</label>
                            <p class="fw-semibold mb-0">@Model.Review.ProviderName</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="text-muted">Service</label>
                            <p class="fw-semibold mb-0">@Model.Review.ServiceName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">Booking ID</label>
                            <p class="fw-semibold mb-0">#@Model.Review.BookingId</p>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="text-muted">Rating</label>
                            <div>
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= Model.Review.Rating)
                                    {
                                        <i class="bi bi-star-fill text-warning fs-4"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star text-muted fs-4"></i>
                                    }
                                }
                                <span class="ms-2 fs-5 fw-bold">@Model.Review.Rating/5</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted">Review Date</label>
                            <p class="fw-semibold mb-0">@Model.Review.ReviewDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="text-muted">Comment</label>
                        @if (!string.IsNullOrEmpty(Model.Review.Comment))
                        {
                            <div class="bg-light rounded p-3">
                                <p class="mb-0">@Model.Review.Comment</p>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted fst-italic">No written comment</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0">Actions</h5>
                </div>
                <div class="card-body">
                    @if (Model.Review.IsVisible)
                    {
                        <form asp-action="Hide" asp-route-id="@Model.Review.ReviewId" method="post" class="mb-3">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-warning w-100"
                                    onclick="return confirm('Hide this review from public view?');">
                                <i class="bi bi-eye-slash me-2"></i>Hide Review
                            </button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="Unhide" asp-route-id="@Model.Review.ReviewId" method="post" class="mb-3">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">
                                <i class="bi bi-eye me-2"></i>Make Visible
                            </button>
                        </form>
                    }

                    <form asp-action="Delete" asp-route-id="@Model.Review.ReviewId" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger w-100"
                                onclick="return confirm('Permanently delete this review? This action cannot be undone.');">
                            <i class="bi bi-trash me-2"></i>Delete Permanently
                        </button>
                    </form>

                    <hr />

                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-2"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>