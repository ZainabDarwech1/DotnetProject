@model LebAssist.Presentation.ViewModels.Review.AdminReviewListViewModel
@{
    ViewData["Title"] = "Manage Reviews";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="bi bi-star-fill text-warning me-2"></i>Review Management
        </h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h3 class="mb-0">@Model.TotalReviews</h3>
                    <small>Total Reviews</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h3 class="mb-0">@Model.VisibleCount</h3>
                    <small>Visible</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h3 class="mb-0">@Model.HiddenCount</h3>
                    <small>Hidden</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h3 class="mb-0">@Model.ModeratedCount</h3>
                    <small>Moderated</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-4">
                    <label class="form-label">Visibility</label>
                    <select name="visibility" class="form-select">
                        <option value="">All</option>
                        <option value="visible" selected="@(Model.FilterVisibility == "visible")">Visible Only</option>
                        <option value="hidden" selected="@(Model.FilterVisibility == "hidden")">Hidden Only</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Moderation Status</label>
                    <select name="moderated" class="form-select">
                        <option value="">All</option>
                        <option value="moderated" selected="@(Model.FilterModerated == "moderated")">Moderated</option>
                        <option value="unmoderated" selected="@(Model.FilterModerated == "unmoderated")">Not Moderated</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-filter me-2"></i>Apply Filters
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <!-- Reviews Table -->
    <div class="card">
        <div class="card-body">
            @if (!Model.Reviews.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h5 class="mt-3 text-muted">No reviews found</h5>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Client</th>
                                <th>Provider</th>
                                <th>Service</th>
                                <th>Rating</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var review in Model.Reviews)
                            {
                                <tr>
                                    <td>@review.ReviewId</td>
                                    <td>
                                        @review.ClientName
                                        @if (review.IsAnonymous)
                                        {
                                            <span class="badge bg-secondary ms-1">Anonymous</span>
                                        }
                                    </td>
                                    <td>@review.ProviderName</td>
                                    <td>@review.ServiceName</td>
                                    <td>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="bi bi-star-fill text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star text-muted"></i>
                                            }
                                        }
                                    </td>
                                    <td>@review.ReviewDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (review.IsVisible)
                                        {
                                            <span class="badge bg-success">Visible</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Hidden</span>
                                        }
                                        @if (review.AdminModerated)
                                        {
                                            <span class="badge bg-info">Moderated</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@review.ReviewId"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (review.IsVisible)
                                            {
                                                <form asp-action="Hide" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-warning" title="Hide Review"
                                                            onclick="return confirm('Hide this review from public view?');">
                                                        <i class="bi bi-eye-slash"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="Unhide" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-success" title="Show Review">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                </form>
                                            }
                                            <form asp-action="Delete" asp-route-id="@review.ReviewId" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger" title="Delete Review"
                                                        onclick="return confirm('Permanently delete this review? This cannot be undone.');">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>